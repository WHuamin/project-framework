# 告诉EditorConfig插件，这是根文件，不用继续往上查找
root = true

# 设置字符集，支持latin1、utf-8、utf-8-bom、utf-16be和utf-16le，不建议使用uft-8-bom。
charset = utf-8
 
# 匹配全部文件
# [*]

# 匹配js,jsx,ts,tsx,vue结尾的文件
[*.{js,jsx,ts,tsx,vue}]


# 缩进风格，可选"space"、"tab"
indent_style = space

# 缩进的空格数
indent_size = 2

# 删除一行中的前后空格
trim_trailing_whitespace = true

# 在文件结尾插入新行
insert_final_newline = true
